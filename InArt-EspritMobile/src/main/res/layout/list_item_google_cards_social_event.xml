<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.esprit.android.inart"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:minHeight="340dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/transparent_button_selector" >

        <ImageView
            android:id="@+id/list_item_google_cards_social_profile_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="4dp"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <com.esprit.android.inart.font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="\@John Doe"
                android:textColor="#fff"
                android:textSize="16sp"
                />

            <com.esprit.android.inart.font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="from Oklahoma"
                android:textColor="#fff"
                android:textSize="12sp"
                 />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/list_item_google_cards_social_image"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:contentDescription="@string/cd_main_image"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical"
        android:background="@drawable/transparent_button_selector"
        android:gravity="right">


        <com.esprit.android.inart.font.RobotoTextView
            android:id="@+id/list_item_google_cards_social_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:maxLines="2"
            android:text="12/12/12"
            android:textColor="@color/cpb_red_dark"
            android:textSize="14sp"
            />

        <com.esprit.android.inart.font.RobotoTextView
            android:id="@+id/list_item_google_cards_social_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:maxLines="2"
            android:text="Esprit Ghazella Ariana , Tunis"
            android:textColor="#fff"
            android:textSize="14sp"
            />

        <com.esprit.android.inart.font.RobotoTextView
            android:id="@+id/list_item_google_cards_social_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="@string/lorem_ipsum_long"
            android:textColor="#fff"
            android:textSize="14sp"
            />





        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cpb_red_dark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <com.esprit.android.inart.font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="Show"
                android:textColor="@color/cpb_red_dark"
                android:textSize="14sp"
               />

            <com.esprit.android.inart.font.RobotoTextView
                android:id="@+id/list_item_google_cards_social_follow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/transparent_button_selector"
                android:padding="8dp"
                android:text="Participate"
                android:textColor="@color/cpb_red_dark"
                android:textSize="14sp"
               />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>