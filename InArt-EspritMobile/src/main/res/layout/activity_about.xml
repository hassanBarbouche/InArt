<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/boyredflou"
        android:scaleType="matrix" />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="30dp"
    android:weightSum="1">
    <ScrollView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:layout_gravity="center_horizontal"
        android:clipToPadding="false"
        android:layout_marginTop="60dp"
        android:layout_weight="0.29">

        <TextView
            android:id="@+id/about_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#afff"
            android:textColorLink="#fff"
            android:fontFamily="sans-serif-condensed"
            android:text="InArt is a mobile application that offers a way to join a big community of artists from all over the world , to post art in its every faces and have access to thousands of art pieces.
            Inart is developped by :"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.1" />


    </ScrollView>
</LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="280dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/hassan3"


                android:id="@+id/hassanphoto"
                android:layout_marginLeft="65dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barbouche Hassan"
                android:id="@+id/textView7"
                android:layout_marginLeft="60dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mariem2"

                android:id="@+id/mariemphoto"
                android:layout_gravity="center_horizontal|left"
                android:layout_marginLeft="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Benkhelifa Myriam"
                android:id="@+id/textView6"
                android:layout_marginLeft="30dp" />

        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/espritmobile"


            android:layout_gravity="center_horizontal|bottom|left"
            android:layout_marginLeft="50dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/espritlog"


            android:layout_gravity="center_horizontal|bottom|right"
            android:layout_marginLeft="60dp" />





        </LinearLayout>

</FrameLayout>