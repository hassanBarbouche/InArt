<?xml version="1.0" encoding="utf-8"?>
<com.esprit.android.inart.ui.views.MaterialRippleLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.esprit.android.inart"
    style="@style/RippleStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:id="@+id/viewback"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/barrecouleur2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="72dp"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            >

            <com.esprit.android.inart.font.MaterialDesignIconsTextView
                android:id="@+id/icon_social_navigation_item"
                style="@style/TextViewAppearance.Title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_weight="0"
                android:padding="0dp"
                android:text="@string/material_icon_account"
                android:textColor="#fff"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1" >

                <com.esprit.android.inart.font.RobotoTextView
                    android:id="@+id/title"
                    style="@style/TextViewAppearance.Title1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingTop="0dp"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <com.esprit.android.inart.font.RobotoTextView
                        android:id="@+id/number_of_people"
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text="See"
                        android:textColor="@color/main_color_grey_400"
                        android:textSize="12sp"
                        />

                    <com.esprit.android.inart.font.RobotoTextView
                        style="@style/TextViewAppearance.Title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="0dp"
                        android:paddingTop="0dp"
                        android:text="your posts"
                        android:textColor="@color/main_color_grey_400"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/main_color_grey_300" />
    </LinearLayout>

</com.esprit.android.inart.ui.views.MaterialRippleLayout>